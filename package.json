{
  "name": "coffee-handbook",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf src/public dist log/*.log",
    "start": "npm run clean && npm run compile:scripts && (npm run bundle:scripts & npm run build:styles & npm run copy:files) && NODE_PATH=dist node dist/index.js",
    "dev": "npm run clean && concurrently 'npm run bundle:scripts:watch' 'npm run build:styles:watch' 'npm run compile:scripts:watch' 'npm run copy:files:watch' 'NODE_PATH=dist nodemon dist/index.js'",
    "compile:scripts": "tsc -p tsconfig.server.json",
    "compile:scripts:watch": "tsc -p tsconfig.server.json -w",
    "bundle:scripts": "NODE_ENV=production webpack --mode production",
    "bundle:scripts:watch": "webpack -w --mode development",
    "bundle:scripts:analyze": "NODE_ENV=production ANALYSIS=true webpack --mode production",
    "build:styles": "postcss -c .postcssrc.js 'src/presentations/**/index.css' --base src/presentations --dir './dist/public'",
    "build:styles:watch": "postcss -c .postcssrc.js -w 'src/presentations/**/index.css' --base src/presentations --dir './dist/public'",
    "copy:files": "cpx 'src/**/*.{json,woff2,png,jpg,ico,wepb,js,svg,pug}' dist",
    "copy:files:watch": "cpx -w 'src/**/*.{json,woff2,png,jpg,ico,webp,js,svg,pug}' dist",
    "build:images": "ts-node bin/minimize-images.ts",
    "generate:store": "ts-node bin/generate-store.ts",
    "test": "NODE_PATH=src mocha --require espower-typescript/guess './test/**/*.ts'",
    "test:watch": "NODE_PATH=src mocha --require espower-typescript/guess './test/**/*.ts' --watch-extensions ts --watch",
    "lint": "tslint --format verbose -c tslint.json 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}' 'bin/**/*.{ts,tsx}'",
    "lint:fix": "tslint --fix --format verbose -c tslint.json 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}' 'bin/**/*.{ts,tsx}'",
    "format": "prettier --ignore-path .gitignore --config .prettierrc --write 'src/**/!(*.json|*.jpg|*.pug|*.html|*.png|*.webp|*.svg)' 'test/**/!(*.json|*.jpg|*.pug|*.html|*.png|*.webp|*.svg)' 'bin/**/!(*.json|*.jpg|*.pug|*.html|*.png|*.webp|*.svg)' webpack.config.js .eslintrc.js .postcssrc.js",
    "precommit": "npm run lint:fix && npm run format",
    "metcis": "npx hint localhost:3030",
    "check": "npx npm-check-updates"
  },
  "keywords": [],
  "author": "khirayama",
  "license": "",
  "dependencies": {
    "axios": "0.18.0",
    "basic-auth-connect": "1.0.0",
    "compression": "1.7.3",
    "cookie-parser": "1.4.3",
    "express": "4.16.3",
    "fuse.js": "3.2.1",
    "leaflet": "1.3.4",
    "morgan": "1.9.1",
    "pug": "2.0.3",
    "query-string": "6.2.0",
    "rotating-file-stream": "1.3.9",
    "rss": "1.2.2"
  },
  "devDependencies": {
    "@types/mocha": "5.2.5",
    "@types/node": "10.11.4",
    "@types/query-string": "6.1.0",
    "autoprefixer": "9.1.5",
    "co": "4.6.0",
    "co-prompt": "1.0.0",
    "concurrently": "4.0.1",
    "cpx": "1.5.0",
    "cssnano": "4.1.4",
    "espower-typescript": "9.0.1",
    "glob": "7.1.3",
    "hint": "3.4.8",
    "imagemin": "6.0.0",
    "imagemin-jpegtran": "5.0.2",
    "imagemin-pngquant": "6.0.0",
    "imagemin-webp": "4.1.0",
    "minimist": "1.2.0",
    "mocha": "5.2.0",
    "nodemon": "1.18.4",
    "postcss-cli": "6.0.0",
    "postcss-import": "12.0.0",
    "postcss-nested": "4.1.0",
    "postcss-simple-vars": "5.0.1",
    "power-assert": "1.6.1",
    "prettier": "1.14.3",
    "puppeteer": "1.9.0",
    "ts-loader": "5.2.1",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.15.0",
    "tslint-microsoft-contrib": "5.2.1",
    "tslint-plugin-prettier": "2.0.0",
    "typescript": "3.0.3",
    "webpack": "4.20.2",
    "webpack-bundle-analyzer": "3.0.2",
    "webpack-cli": "3.1.2"
  }
}
