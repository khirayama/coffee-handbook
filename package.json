{
  "name": "coffee-handbook",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf src/public dist",
    "start": "npm run clean && npm run bundle:scripts && npm run build:styles && npm run compile:scripts && npm run copy:files && NODE_PATH=dist node dist/index.js",
    "dev": "npm run clean && concurrently 'npm run bundle:scripts:watch' 'npm run build:styles:watch' 'npm run compile:scripts:watch' 'npm run copy:files:watch' 'NODE_PATH=dist nodemon dist/index.js'",
    "compile:scripts": "tsc -p tsconfig.server.json",
    "compile:scripts:watch": "tsc -p tsconfig.server.json -w",
    "bundle:scripts": "NODE_ENV=production webpack --mode production",
    "bundle:scripts:watch": "webpack -w --mode development",
    "bundle:scripts:analyze": "NODE_ENV=production ANALYSIS=true webpack --mode production",
    "build:styles": "postcss -c .postcssrc.js 'src/presentations/**/index.css' --base src/presentations --dir './dist/public'",
    "build:styles:watch": "postcss -c .postcssrc.js -w 'src/presentations/**/index.css' --base src/presentations --dir './dist/public'",
    "copy:files": "cpx 'src/**/*.{json,woff2,png,jpg,ico,wepb,js,svg,pug}' dist",
    "copy:files:watch": "cpx -w 'src/**/*.{json,woff2,png,jpg,ico,webp,js,svg,pug}' dist",
    "build:images": "node bin/minimize-images.js",
    "test": "NODE_PATH=src mocha --require espower-typescript/guess test/**/*.ts",
    "test:watch": "NODE_PATH=src mocha --require espower-typescript/guess test/**/*.ts --watch-extensions ts --watch",
    "lint": "tslint --format verbose -c tslint.json 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "lint:fix": "tslint --fix --format verbose -c tslint.json 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}'",
    "format": "prettier --ignore-path .gitignore --config .prettierrc --write 'src/**/!(*.json|*.jpg|*.pug|*.html|*.png|*.webp|*.svg)' 'test/**/!(*.json|*.jpg|*.pug|*.html|*.png|*.webp|*.svg)' bin webpack.config.js .eslintrc.js .postcssrc.js",
    "precommit": "npm run lint:fix && npm run format",
    "metcis": "npx hint localhost:3030",
    "check": "npx npm-check-updates"
  },
  "keywords": [],
  "author": "khirayama",
  "license": "",
  "dependencies": {
    "compression": "1.7.2",
    "cookie-parser": "1.4.3",
    "express": "4.16.3",
    "fuse.js": "3.2.1",
    "pug": "2.0.3"
  },
  "devDependencies": {
    "@types/mocha": "5.2.3",
    "@types/node": "10.3.4",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.3",
    "babel-loader": "7.1.4",
    "babel-preset-env": "1.7.0",
    "concurrently": "3.5.1",
    "cpx": "1.5.0",
    "cssnano": "3.10.0",
    "eslint": "4.19.1",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-xo-space": "0.18.0",
    "eslint-plugin-prettier": "2.6.0",
    "espower-typescript": "9.0.0",
    "glob": "7.1.2",
    "hint": "3.2.0",
    "imagemin": "5.3.1",
    "imagemin-jpegtran": "5.0.2",
    "imagemin-pngquant": "5.1.0",
    "imagemin-webp": "4.1.0",
    "minimist": "1.2.0",
    "mocha": "5.2.0",
    "nodemon": "1.17.5",
    "postcss-cli": "5.0.0",
    "postcss-import": "11.1.0",
    "postcss-nested": "3.0.0",
    "postcss-simple-vars": "4.1.0",
    "power-assert": "1.6.0",
    "prettier": "1.13.5",
    "rss": "1.2.2",
    "ts-loader": "4.4.2",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.10.0",
    "tslint-config-prettier": "1.13.0",
    "tslint-microsoft-contrib": "5.0.3",
    "tslint-plugin-prettier": "1.3.0",
    "typescript": "2.9.2",
    "webpack": "4.13.0",
    "webpack-bundle-analyzer": "2.13.1",
    "webpack-cli": "3.0.8"
  }
}
