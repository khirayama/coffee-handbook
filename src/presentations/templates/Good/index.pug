extends /application/Layout

block import
  include /components/Header
  include /components/Footer
  include /components/Navigation
  include /components/Picture
  include /components/GoodCard
  include /components/PictureGallery

block meta
  script(src="/templates/Good/bundle.js" defer)
  link(rel="stylesheet" href="/templates/Good/index.css")

block body
  .Good
    +Header(props.header)
    +Navigation(props.navigation)
    .Good--Content
      .Good--Content--Cover
        .Good--Content--Cover--PictureGallery
          +PictureGallery(props.pictureGallery)
        .Good--Content--Cover--Information
          .Good--Content--Cover--Information--Name= props.good.name
          .Good--Content--Cover--Information--Category= props.good.category
          .Good--Content--Cover--Information--Summary!= props.good.summary
          table.Good--Content--Cover--Information--Spec
            tbody
              for spec in props.good.specs
                tr
                  th= spec.name
                  td= spec.value
          .Good--Content--Cover--Information--Button= dic.t('Templates.Good.buyAtAmazon')
      .Good--Content--Content
        .Good--Content--Content--Content
          p!= props.good.content
      if props.relatedGoods.length
        .Good--Content--RelatedList
          .Good--Content--RelatedList--Title= dic.t('Templates.Good.relatedGoods')
          for relatedGood in props.relatedGoods
            .Good--Content--RelatedList--Item
              +GoodCard(relatedGood)
      if props.relatedRecipes.length
        .Good--Content--RelatedList
          .Good--Content--RelatedList--Title= dic.t('Templates.Good.relatedRecipes')
          for relatedGood in props.relatedRecipes
            .Good--Content--RelatedList--Item
              +GoodCard(relatedGood)
    +Footer
