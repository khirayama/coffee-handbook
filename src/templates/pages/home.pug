extends /layouts/index

block import
  include /components/header
  include /components/footer
  include /components/navigation
  include /components/picture
  include /components/story-card

block vars
  - const title = dic.t('navigation.HOME');

block meta
  title= title
  meta(name="description" content=title)
  link(rel="stylesheet" href="/styles/pages/home/index.css")

block body
  .home
    +header(lang)
    +navigation(path, dic)

    a.home--cover-story(href=`/posts/${featuredPost.id}`)
      .home--cover-story--content
        .home--cover-story--content--image
          +picture(featuredPost.thumbnailUrl.default, featuredPost.title)
            source(media="(min-width: 446px)" srcset=featuredPost.thumbnailUrl.rectangle)
            source(media="(max-width: 446px)" srcset=featuredPost.thumbnailUrl.square)
          .home--cover-story--content--image--cover
          .home--cover-story--content--title
            = featuredPost.title
            br
            .home--cover-story--content--title--date= featuredPost.publishedAt

    .home--heading= dic.t('home.LATEST_ARTICLES')

    ul.home--story-list
      each post in posts
        li.home--story-list--item
          a.home--story-list--item--link(href=`/posts/${post.id}`)
            +story-card(post)
    +footer(lang)
