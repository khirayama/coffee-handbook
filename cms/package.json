{
  "name": "coffee-handbook-cms",
  "version": "0.0.1",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rm -rf src/public dist",
    "build": "npm run clean && npm run compile:scripts && npm run bundle:scripts && npm run build:styles && npm run copy:files",
    "start": "node dist/index.js",
    "dev": "npm run clean && concurrently 'npm run bundle:scripts:watch' 'npm run build:styles:watch' 'npm run compile:scripts:watch' 'npm run copy:files:watch' 'NODE_PATH=dist nodemon dist/index.js'",
    "compile:scripts": "tsc -p tsconfig.server.json",
    "compile:scripts:watch": "tsc -p tsconfig.server.json -w",
    "bundle:scripts": "NODE_ENV=production webpack --mode production",
    "bundle:scripts:watch": "webpack -w --mode development",
    "bundle:scripts:analyze": "NODE_ENV=production ANALYSIS=true webpack --mode production",
    "build:styles": "postcss -c .postcssrc.js 'src/presentations/**/index.css' --base src/presentations --dir './dist/public'",
    "build:styles:watch": "postcss -c .postcssrc.js -w 'src/presentations/**/index.css' --base src/presentations --dir './dist/public'",
    "copy:files": "cpx 'src/**/*.{csv,json,woff2,png,jpg,ico,wepb,js,svg,pug,html}' dist",
    "copy:files:watch": "cpx -w 'src/**/*.{csv,json,woff2,png,jpg,ico,webp,js,svg,pug,html}' dist",
    "lint": "tslint --format verbose -c tslint.json 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}' 'bin/**/*.{ts,tsx}'",
    "lint:fix": "tslint --fix --format verbose -c tslint.json 'src/**/*.{ts,tsx}' 'test/**/*.{ts,tsx}' 'bin/**/*.{ts,tsx}'",
    "format": "prettier --ignore-path .gitignore --config .prettierrc --write 'src/**/!(*.json|*.jpg|*.pug|*.html|*.png|*.webp|*.svg|*.csv)' 'test/**/!(*.json|*.jpg|*.pug|*.html|*.png|*.webp|*.svg|*.csv)' 'bin/**/!(*.json|*.jpg|*.pug|*.html|*.png|*.webp|*.svg|*.csv)' webpack.config.js .eslintrc.js .postcssrc.js",
    "precommit": "npm run lint:fix && npm run format",
    "check": "npx npm-check-updates"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/node": "10.12.18",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "autoprefixer": "9.4.3",
    "clasp": "0.1.0",
    "concurrently": "4.1.0",
    "cpx": "1.5.0",
    "cssnano": "4.1.8",
    "express": "4.16.4",
    "nodemon": "1.18.9",
    "postcss-cli": "6.1.0",
    "postcss-import": "12.0.1",
    "postcss-nested": "4.1.1",
    "postcss-simple-vars": "5.0.1",
    "prettier": "1.15.3",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "ts-loader": "5.3.2",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-microsoft-contrib": "6.0.0",
    "tslint-plugin-prettier": "2.0.1",
    "typescript": "3.2.2",
    "watch": "1.0.2",
    "webpack": "4.28.2",
    "webpack-cli": "3.1.2"
  }
}
